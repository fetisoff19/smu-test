{
  "compilerOptions" :  {
    "target": "es6",
    "moduleResolution": "nodenext",
    "baseUrl" :  "./" ,
    "paths" :  {
      "@*" :  [ "./src/*" ],
      "@assets/*": ["./assets/*"],
      "@app/*": ["./src/app/*"],
      "@entities/*": ["./src/entities/*"],
      "@features/*": ["./src/features/*"],
      "@pages/*": ["./src/pages/*"],
      "@shared/*": ["./src/shared/*"],
      "@styles/*": ["./src/app/styles/*"],
      "@widgets/*": ["./src/widgets/*"]
    },
    "jsx": "react",
  },
  "exclude": ["node_modules", "dist", "docs"]
}
